<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ptHomePage">

    <GridLayout
        android:id="@+id/horizontalGrid"
        android:layout_width="350dp"
        android:layout_height="105dp"
        android:columnCount="4"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:rowCount="1"
        app:layout_constraintBottom_toTopOf="@+id/rvpthomepage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.736">

        <androidx.cardview.widget.CardView
            android:layout_width="81dp"
            android:id="@+id/cvCat"
            android:layout_height="100dp"
            android:layout_row="0"
            app:cardCornerRadius="15dp"
            android:layout_column="0"
            app:cardElevation="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="73dp"
                    android:layout_height="74dp"
                    android:layout_gravity="center"
                    android:src="@drawable/happy">
                </ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cats"
                    android:layout_gravity="center"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="1dp">
                </TextView>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvDog"
            android:layout_width="81dp"
            android:layout_height="100dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_marginLeft="10dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="73dp"
                    android:layout_height="74dp"
                    android:layout_gravity="center"
                    android:src="@drawable/dog">
                </ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dogs"
                    android:layout_gravity="center"
                    android:textSize="18sp"
                    android:textStyle="bold">
                </TextView>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvBird"
            android:layout_width="81dp"
            android:layout_height="100dp"
            android:layout_row="0"
            android:layout_column="2"
            app:cardCornerRadius="15dp"
            android:layout_marginLeft="10dp"
            app:cardElevation="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="73dp"
                    android:layout_height="74dp"
                    android:layout_gravity="center"
                    android:src="@drawable/bird">
                </ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Birds"
                    android:layout_gravity="center"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="1dp">
                </TextView>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cvRabbit"
            android:layout_width="81dp"
            android:layout_height="100dp"
            android:layout_row="0"
            app:cardCornerRadius="15dp"
            android:layout_column="3"
            android:layout_marginLeft="10dp"
            app:cardElevation="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="67dp"
                    android:layout_height="74dp"
                    android:layout_gravity="center"
                    android:src="@drawable/rabbitt">
                </ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rabbits"
                    android:layout_gravity="center"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="1dp">
                </TextView>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </GridLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvpthomepage"
        android:layout_width="match_parent"
        android:layout_height="360dp"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigationView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_nav_menu" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="188dp"
        android:layout_height="36dp"
        android:fontFamily="sans-serif-condensed"
        android:paddingTop="5dp"
        android:text="For Adaption"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/rvpthomepage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.071"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontalGrid"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="188dp"
        android:layout_height="36dp"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center"
        android:paddingTop="5dp"
        android:text="CATEGORIES"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/horizontalGrid"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.811" />

    <androidx.appcompat.widget.SearchView
        android:id="@+id/sv_search_homepage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/custom_backgroundedittext"
        android:ems="10"
        android:hint="Search"
        android:inputType="textAutoComplete"
        app:iconifiedByDefault="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:queryHint="Search" />

</androidx.constraintlayout.widget.ConstraintLayout>