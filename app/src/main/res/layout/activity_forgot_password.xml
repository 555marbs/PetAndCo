<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_forgot_password">

    <ImageView
        android:id="@+id/img_backButton_forgotpassword"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="300dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/backbutton" />


    <TextView
        android:id="@+id/tv_forgotPassword_forgotpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="FORGOT PASSWORD"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_backButton_forgotpassword" />

    <EditText
        android:id="@+id/et_email_forgotpassword"
        android:layout_width="327dp"
        android:layout_height="63dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/custom_edittext"
        android:ems="10"
        android:hint="Email Address"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_forgotPassword_forgotpassword" />

    <Button
        android:id="@+id/btn_forgotpassword_forgotpassword"
        android:layout_width="325dp"
        android:layout_height="46dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_button"
        android:text="FORGOT PASSWORD"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/et_email_forgotpassword"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="@+id/et_email_forgotpassword"
        app:layout_constraintTop_toBottomOf="@+id/et_email_forgotpassword" />


</androidx.constraintlayout.widget.ConstraintLayout>