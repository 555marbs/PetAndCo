<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/brown"
    android:padding="16dp">

    <ImageView
        android:id="@+id/ivBackbtn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/iconbackbutton" />

    <View
        android:id="@+id/view"
        android:layout_width="300dp"
        android:layout_height="560dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/viewloginpages"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/ivPostAdoption"
        android:layout_width="276dp"
        android:layout_height="190dp"
        android:layout_marginTop="12dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="@+id/view"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toTopOf="@+id/view" />

    <Button
        android:id="@+id/btnSelectImage"
        android:layout_width="260dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@color/capucino"
        android:text="Select an Image of your Pet"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivPostAdoption" />

    <EditText
        android:id="@+id/et_TitlePosting"
        android:layout_width="260dp"
        android:layout_height="45dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/custom_edittext"
        android:hint="Title"
        android:paddingLeft="15dp"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/btnSelectImage"
        app:layout_constraintStart_toStartOf="@+id/btnSelectImage"
        app:layout_constraintTop_toBottomOf="@+id/btnSelectImage" />
    <EditText
        android:id="@+id/et_Contacts"
        android:layout_width="260dp"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/custom_edittext"
        android:hint="Contacts:"
        android:paddingLeft="15dp"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/et_TitlePosting"
        app:layout_constraintStart_toStartOf="@+id/et_TitlePosting"
        app:layout_constraintTop_toBottomOf="@+id/et_TitlePosting" />

    <EditText
        android:id="@+id/et_ContentDescription"
        android:layout_width="260dp"
        android:layout_height="100dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/custom_edittext"
        android:gravity="top"
        android:hint="Content Description"
        android:padding="10dp"
        android:paddingLeft="15dp"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/et_Contacts"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/et_Contacts"
        app:layout_constraintTop_toBottomOf="@+id/et_Contacts" />

    <Button
        android:id="@+id/btnPostAdoption"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_selector"
        android:text="POST"
        android:textSize="12sp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/et_ContentDescription"
        app:layout_constraintStart_toStartOf="@+id/et_ContentDescription"
        app:layout_constraintTop_toBottomOf="@+id/et_ContentDescription" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="POST ADOPTION"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.439"
        app:layout_constraintStart_toEndOf="@+id/ivBackbtn"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
