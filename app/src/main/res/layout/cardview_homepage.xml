<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="30dp"
    android:padding="5dp"
    android:layout_margin="5dp"
    android:layout_width="380dp"
    android:layout_height="350dp"
    android:id="@+id/CardView">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="380dp"
        android:layout_height="350dp"
        android:background="@drawable/border"
        tools:layout_editor_absoluteX="1dp">

        <ImageView
            android:id="@+id/CardViewImage"
            android:layout_width="350dp"
            android:layout_height="158dp"
            android:src="@drawable/cat"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.533"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.083" />

        <TextView
            android:id="@+id/CardViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="sans-serif-condensed"
            android:text="Pussy"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="@+id/CardViewDescription"
            app:layout_constraintHorizontal_bias="0.029"
            app:layout_constraintStart_toStartOf="@+id/CardViewDescription"
            app:layout_constraintTop_toBottomOf="@+id/CardViewImage" />

        <TextView
            android:id="@+id/CardViewDescription"
            android:layout_width="333dp"
            android:layout_height="24dp"
            android:layout_marginTop="12dp"
            android:fontFamily="sans-serif-condensed"
            android:padding="2dp"
            android:text="Cat, (Felis catus)hahahahaha"
            android:textSize="13sp"
            app:layout_constraintBottom_toTopOf="@+id/btAdopt"
            app:layout_constraintEnd_toEndOf="@+id/CardViewImage"
            app:layout_constraintHorizontal_bias="0.47"
            app:layout_constraintStart_toStartOf="@+id/CardViewImage"
            app:layout_constraintTop_toBottomOf="@+id/CardViewImage"
            app:layout_constraintVertical_bias="0.72" />

        <Button
            android:id="@+id/btAdopt"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:background="@color/midbrown"
            android:text="Adopt ME"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/CardViewDescription"
            app:layout_constraintHorizontal_bias="0.758"
            app:layout_constraintStart_toStartOf="@+id/CardViewDescription" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
